
.date-group {
  margin-bottom: 16px;
}

/* 日期分组标题 */
.date-header {
  padding: 8px 16px;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 4px;
}
.date-left {
  display: flex;
  align-items: center;
}
.date-text {
  font-size: 16px;
  color: #333333;
  font-weight: normal;
}
.photo-count {
  background-color: transparent;
}
.photo-count-text {
  font-size: 16px;
  color: #999999;
  font-weight: normal;
}

/* 照片网格 */
.photo-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0;
  padding: 0 16px;
}
.photo-wrapper {
  width: calc(33.33% - 2px);
  margin: 1px;
  aspect-ratio: 1/1;
}
